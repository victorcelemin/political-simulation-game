  <!-- Podium -->
  <rect x="350" y="420" width="100" height="80" fill="#d94f1f" stroke="#e6b800" stroke-width="3"/>
  
  <!-- Microphone -->
  <line x1="400" y1="420" x2="400" y2="300" stroke="#222034" stroke-width="3"/>
  <circle cx="400" cy="280" r="15" fill="#a6231f" stroke="#e6b800" stroke-width="2"/>
  
  <!-- Crowd representation -->
  <g id="crowd">
    <!-- Row 1 -->
    <circle cx="100" cy="550" r="12" fill="#e6b800" stroke="#222034" stroke-width="1"/>
    <circle cx="150" cy="550" r="12" fill="#e6b800" stroke="#222034" stroke-width="1"/>
    <circle cx="200" cy="550" r="12" fill="#e6b800" stroke="#222034" stroke-width="1"/>
    <circle cx="250" cy="550" r="12" fill="#e6b800" stroke="#222034" stroke-width="1"/>
    <circle cx="300" cy="550" r="12" fill="#e6b800" stroke="#222034" stroke-width="1"/>
    <circle cx="500" cy="550" r="12" fill="#e6b800" stroke="#222034" stroke-width="1"/>
    <circle cx="550" cy="550" r="12" fill="#e6b800" stroke="#222034" stroke-width="1"/>
    <circle cx="600" cy="550" r="12" fill="#e6b800" stroke="#222034" stroke-width="1"/>
    <circle cx="650" cy="550" r="12" fill="#e6b800" stroke="#222034" stroke-width="1"/>
    <circle cx="700" cy="550" r="12" fill="#e6b800" stroke="#222034" stroke-width="1"/>
  </g>
  
  <!-- Spotlight effect -->
  <ellipse cx="400" cy="300" rx="150" ry="200" fill="#e6b800" opacity="0.1"/>
  
  <!-- Text -->
  <text x="400" y="480" font-family="Arial" font-size="28" font-weight="bold" fill="#e6b800" text-anchor="middle">CAMPAÃ‘A</text>
</svg>
