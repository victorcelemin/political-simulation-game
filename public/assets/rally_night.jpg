<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 600">
  <defs>
    <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
      <path d="M 40 0 L 0 0 0 40" fill="none" stroke="#5e2d79" stroke-width="0.5"/>
    </pattern>
  </defs>
  
  <!-- Night sky background -->
  <rect width="800" height="600" fill="#1a1a2e"/>
  <rect width="800" height="600" fill="url(#grid)" opacity="0.1"/>
  
  <!-- Stars -->
  <circle cx="100" cy="50" r="2" fill="#e6b800"/>
  <circle cx="200" cy="80" r="2" fill="#e6b800"/>
  <circle cx="350" cy="100" r="2" fill="#e6b800"/>
  <circle cx="500" cy="60" r="2" fill="#e6b800"/>
  <circle cx="650" cy="90" r="2" fill="#e6b800"/>
  <circle cx="750" cy="70" r="2" fill="#e6b800"/>
  
  <!-- Stage -->
